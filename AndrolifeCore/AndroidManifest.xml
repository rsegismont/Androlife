<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.rsegismont.android.androLife.core"
    android:installLocation="preferExternal"
    android:versionCode="8"
    android:versionName="2.2" >

    <uses-sdk
        android:minSdkVersion="7"
        android:targetSdkVersion="19" />

    <supports-screens
        android:anyDensity="true"
        android:largeScreens="true"
        android:normalScreens="true"
        android:smallScreens="true"
        android:xlargeScreens="true" />

    <permission
        android:name="com.rsegismont.android.androLife.core.READ"
        android:description="@string/app_name"
        android:label="READ"
        android:protectionLevel="signature" />
    <permission
        android:name="com.rsegismont.android.androLife.core.WRITE"
        android:description="@string/app_name"
        android:label="WRITE"
        android:protectionLevel="signature" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name" >
        <provider
            android:name="com.rsegismont.android.androLife.core.AndrolifeProvider"
            android:authorities="com.rsegismont.android.androLife.core.AndrolifeProvider"
            android:exported="true"
            android:readPermission="com.rsegismont.android.androLife.core.READ"
            android:writePermission="com.rsegismont.android.androLife.core.WRITE" >
            <path-permission
                android:pathPrefix="/search_suggest_query"
                android:readPermission="android.permission.GLOBAL_SEARCH" />
        </provider>
    </application>

</manifest>