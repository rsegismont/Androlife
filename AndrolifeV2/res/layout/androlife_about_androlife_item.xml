<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/common_margin_horizontal"
        android:layout_marginLeft="@dimen/common_margin_vertical"
        android:layout_marginRight="@dimen/common_margin_vertical"
        android:layout_marginTop="@dimen/common_margin_horizontal"
        android:background="@drawable/card"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingLeft="@dimen/list_margin" >

        <ImageView
            android:id="@+id/about_icon"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_margin="10dp"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:src="@drawable/toutsuite" />

        <TextView
            android:id="@+id/about_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:autoLink="all"
            android:ellipsize="end"
            android:gravity="center"
            android:textAppearance="@android:style/TextAppearance.Small" />
    </LinearLayout>

</LinearLayout>