<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:orientation="vertical"
        style="@style/Androlife_Details_Title_Container_Abstract"
        android:layout_marginBottom="@dimen/common_margin_vertical"
        android:layout_marginLeft="@dimen/common_margin_vertical"
        android:layout_marginRight="@dimen/common_margin_vertical" >

        <TextView
            android:id="@id/detail_item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/androlife_programs_hint_underline"
            android:textSize="12sp" />

        <TextView
            android:id="@id/detail_item_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:textSize="17sp" />
    </LinearLayout>

</LinearLayout>