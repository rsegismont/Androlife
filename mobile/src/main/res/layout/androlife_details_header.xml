<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/androlife_detail_image"
        style="@style/Androlife_Details_Image"
        android:src="@drawable/toutsuite" />

    <LinearLayout
        style="@style/Androlife_Details_Top_Container"
        android:layout_margin="@dimen/common_margin_vertical" >

        <LinearLayout
            style="@style/Androlife_Details_Title_Container"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/androlife_detail_title"
                style="@style/Androlife_Details_Title"
                android:text="Titre" />

            <TextView
                android:id="@+id/androlife_detail_subtitle"
                style="@style/Androlife_Details_SubTitle"
                android:text="Texte" />
        </LinearLayout>

        <LinearLayout
            style="@style/Androlife_Details_Extra_Container"
            android:layout_gravity="right|bottom"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/androlife_detail_csa"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:scaleType="fitCenter" />

            <ImageView
                android:id="@+id/androlife_detail_hd"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="8dp"
                android:scaleType="fitCenter"
                android:visibility="gone" />

            <TextView
                android:id="@+id/androlife_detail_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>